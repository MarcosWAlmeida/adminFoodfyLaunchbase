{% extends "layout.njk"%}

{% block content%}
    <div class="recipes_img">
        <img src="{{recipes.url_img}}" alt=""> 
    </div>
    <div class="recipes-by">
        <h3>{{recipes.recipe_title}}</h3>
        <p>por {{recipes.recipe_author}}</p>
    </div>

<div class="preparation-mode">
    <h2>Ingredientes</h2>
    <a class="button">Esconder</a>
</div>
<div class="content show">
    <ul class="prep-mode">
        {% for rec in recipes.ingredients %}
        <li>{{rec}}</li>
        {% endfor %}
    </ul>
</div>

<div class="preparation-mode">
    <h2>Modo de Preparo</h2>
    <a class="button">Esconder</a>
</div>
<div class="content show">
    <p class="prep-mode">{{recipes.preparation_mode}}</p>
</div>

<div class="preparation-mode">
    <h2>Informações Adicionais</h2>
    <a class="button">Esconder</a>
</div>
<div class="content show">
    <p class="prep-mode">{{recipes.additional_information}}</p>
</div>




{%endblock%}

